<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/transactionTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Db"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Transaction Against"
        android:id="@+id/transactionAgainstTextView"
        android:textStyle="italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="3dp" />

    <TextView
        android:id="@+id/transactionAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Transaction Amount"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/transactionTypeTextView"
        android:paddingRight="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Transaction Balance"
        android:id="@+id/transactionBalanceTextView"
        android:layout_below="@+id/transactionTypeTextView"
        android:layout_alignParentEnd="true"
        android:paddingRight="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date"
        android:id="@+id/transactionDateTextView"
        android:layout_alignTop="@+id/transactionBalanceTextView"
        android:layout_alignParentStart="true"
        android:paddingLeft="3dp" />
</RelativeLayout>