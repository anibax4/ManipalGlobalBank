<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mgb.manipalglobalbank.LoginActivity"
    android:orientation="vertical"
    android:background="@color/manipalBlueDark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/manipalBlue">

        <ImageView
            android:layout_width="183dp"
            android:layout_height="183dp"
            android:id="@+id/imageView3"
            android:src="@mipmap/ic_manipal_orange"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name_caps"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:textColor="@color/manipalOrange"
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:paddingTop="30dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/ic_person" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_userid"
                android:hint="@string/login_id"
                android:textColorHint="@color/white"
                android:textColor="@color/manipalOrange"
                android:textStyle="italic" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_lock" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText_password"
                android:hint="@string/login_password"
                android:textColorHint="@color/white"
                android:textColor="@color/manipalOrange" />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="@string/login_btn"
        android:id="@+id/loginButton"
        android:textColor="@color/white"
        android:background="@color/manipalOrange"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:onClick="login"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="112dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/login_forgot_password"
        android:id="@+id/textView2"
        android:textColor="@color/manipalOrange"
        android:textSize="15sp"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/login_contact"
        android:id="@+id/textView"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
