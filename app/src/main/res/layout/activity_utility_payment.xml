<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mgb.manipalglobalbank.UtilityPaymentActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/manipalBlue"
        android:id="@+id/relativeLayout3"
        android:paddingTop="40dp"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView7"
            android:src="@mipmap/ic_manipal_orange"
            android:paddingRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/textView13"
            android:textColor="@color/manipalOrange"
            android:textSize="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="15dp"
            android:paddingLeft="4dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/current_balance"
            android:id="@+id/textView14"
            android:textColor="@color/white"
            android:layout_below="@+id/textView13"
            android:layout_alignEnd="@+id/utilityTV_balanceTopView"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/utilityTV_balanceTopView"
            android:gravity="bottom|center|end"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="45sp"
            android:layout_below="@+id/textView14"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/utility_screen_description"
        android:id="@+id/textView4"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@color/manipalOrange"
        android:layout_marginBottom="20dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/utilityPaymentListView"
        android:divider="@android:color/transparent"
        android:dividerHeight="6dp"/>


</LinearLayout>
