<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mgb.manipalglobalbank.StatementActivity"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/manipalBlue"
        android:id="@+id/relativeLayout5"
        android:paddingTop="5dp"
        android:gravity="center"
        android:paddingBottom="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/textView15"
            android:textColor="@color/manipalOrange"
            android:textSize="35dp"
            android:paddingLeft="4dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView8"
            android:src="@mipmap/ic_manipal_orange"
            android:paddingRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/statement_screen_description"
        android:id="@+id/textView16"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@color/manipalOrange"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/relativeLayout5"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/transactionsListView"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true" />

</RelativeLayout>
